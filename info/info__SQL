// Rinominare una tabella
RENAME TABLE `blog`.`user` TO `blog`.`users`;

// inserimento nuovo campo nella tabella dopo un determinato campo
ALTER TABLE `user` ADD `birth` DATE NOT NULL AFTER `age`;

// cancellare un campo
ALTER TABLE `user` DROP `age`;


// cambia il dato di tipo data
ALTER TABLE `users` CHANGE `reg_date` `reg_date` DATETIME on update CURRENT_TIMESTAMP NOT NULL DEFAULT CURRENT_TIMESTAMP;